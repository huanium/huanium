%%% SIMPLE PENDULUM IN ROTATING & INERTIAL FRAME

% constants
N = 200 ;
t = linspace(0,10*pi,N);
w0 = 1;
Omega = w0*0.01;
% CW = 1/2;   % unit length
%CCW = 1/2;  % unit length

CW = 1/2;   % unit length
CCW = 1/2;  % unit length

% solution
x = CW*cos((w0-Omega)*t) + CCW*cos((w0+Omega)*t);
y = CW*sin((w0-Omega)*t) - CCW*sin((w0+Omega)*t);
plot(x,y, 'Color','k')
xlabel('X')
ylabel('Y')